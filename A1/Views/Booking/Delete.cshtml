@model A1.Models.CustomerBooking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<div>
    <h4>Are you sure you want to delete this booking?</h4>
    <div>
        <h5>@Model.FirstName @Model.LastName</h5>
        <p>
            <strong>Email: </strong>@Model.Email <br />
            <strong>Phone Number: </strong>@Model.PhoneNumber <br />
            <strong>Date: </strong>@Model.Date.ToString("g") <br />
            <strong>Services Required: </strong>@Model.ServicesRequired
        </p>
    </div>

    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
