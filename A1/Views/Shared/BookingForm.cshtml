@model A1.Models.CustomerBooking

@using (Html.BeginForm("Book", "Booking", FormMethod.Post))
{
    <div>
        <label for="FirstName">First Name:</label>
        <input type="text" id="FirstName" name="FirstName"/>
    </div>

    <div>
        <label for="LastName">Last Name:</label>
        <input type="text" id="LastName" name="LastName" required />
    </div>

    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" required />
    </div>

    <div>
        <label for="PhoneNumber">Phone Number:</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" required />
    </div>

    <div>
        <label for="Date">Date:</label> @* Date validation not support past date. *@
        <input type="date" id="Date" name="Date" min="@DateTime.Now.ToString("yyyy-MM-dd")" required /> 
    </div>

    <div>
        <label for="ServicesRequired">Services Required:</label>
        <select id="ServicesRequired" name="ServicesRequired" required>
            <option value="">Select a service</option>
            @foreach (var treatmentName in ViewBag.TreatmentNames)
            {
                <option value="@treatmentName">@treatmentName</option>
            }
        </select>
    </div>
    <button type="submit">Book Now</button>
}